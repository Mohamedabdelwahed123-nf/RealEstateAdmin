@model IEnumerable<RealEstateAdmin.Models.BienImmobilier>

@{
    ViewData["Title"] = "Shop Immobilier";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-gradient">
            <i class="bi bi-shop"></i> Shop Immobilier
        </h1>
        <a asp-controller="BienImmobilier" asp-action="Create" class="btn btn-success btn-lg">
            <i class="bi bi-plus-lg"></i> Ajouter un bien
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Filtres -->
    <div class="card mb-5 border-0 shadow-sm" style="background: linear-gradient(to right, #f8f9fa, #ffffff);">
        <div class="card-body p-4">
            <form asp-action="Index" method="get">
                <div class="row g-3">
                    <div class="col-md-2">
                        <label class="form-label fw-semibold">Type</label>
                        <select name="typeTransaction" class="form-select">
                            <option value="">Tous</option>
                            <option value="A Vendre" selected="@(ViewBag.TypeTransaction == "A Vendre")">A Vendre</option>
                            <option value="A Louer" selected="@(ViewBag.TypeTransaction == "A Louer")">A Louer</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Localisation</label>
                        <input type="text" class="form-control" name="adresse" value="@ViewBag.Adresse" placeholder="Ville, quartier..." />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Titre</label>
                        <input type="text" class="form-control" name="titre" value="@ViewBag.Titre" placeholder="Villa, Appartement..." />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label fw-semibold">Prix Min</label>
                        <input type="number" class="form-control" name="prixMin" value="@ViewBag.PrixMin" placeholder="0" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label fw-semibold">Prix Max</label>
                        <input type="number" class="form-control" name="prixMax" value="@ViewBag.PrixMax" placeholder="Max" />
                    </div>
                </div>
                <div class="mt-3 text-end">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">Réinitialiser</a>
                    <button type="submit" class="btn btn-primary px-4"><i class="bi bi-search"></i> Filtrer</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Liste -->
    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0 property-card-hover" style="transition: transform 0.2s;">
                        <div class="position-relative" style="height: 200px; overflow: hidden;">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl" class="card-img-top h-100 w-100" style="object-fit: cover;" alt="@item.Titre">
                            }
                            else
                            {
                                <div class="bg-light h-100 w-100 d-flex align-items-center justify-content-center text-muted">
                                    <i class="bi bi-image fs-1"></i>
                                </div>
                            }
                            <div class="position-absolute top-0 end-0 m-2">
                                @if (item.TypeTransaction == "A Vendre")
                                {
                                    <span class="badge bg-success rounded-pill px-3 py-2 shadow-sm">A Vendre</span>
                                }
                                else
                                {
                                    <span class="badge bg-info text-dark rounded-pill px-3 py-2 shadow-sm">A Louer</span>
                                }
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title fw-bold text-truncate" title="@item.Titre">@item.Titre</h5>
                            <h6 class="text-primary fw-bold mb-3">@item.Prix.ToString("N2") DT</h6>
                            
                            <p class="card-text text-muted small mb-2">
                                <i class="bi bi-geo-alt-fill text-danger"></i> @(item.Adresse ?? "Adresse non spécifiée")
                            </p>
                            
                            <div class="d-flex justify-content-between text-muted small mb-3">
                                <span><i class="bi bi-rulers"></i> @(item.Surface) m²</span>
                                <span><i class="bi bi-door-closed"></i> @(item.NombrePieces) Pièces</span>
                            </div>

                            <hr class="my-2" />
                            
                            <div class="d-flex align-items-center justify-content-between mt-2">
                                <div class="d-flex align-items-center">
                                    <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                        <i class="bi bi-person-fill text-secondary"></i>
                                    </div>
                                    <small class="text-muted">
                                        Par <strong>@(item.User?.Nom ?? item.User?.UserName ?? "Inconnu")</strong>
                                    </small>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-top-0 pt-0 pb-3">
                            <div class="d-grid gap-2">
                                <a asp-controller="BienImmobilier" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary rounded-pill">
                                    Voir détails
                                </a>
                                @if (User.Identity.IsAuthenticated && item.User?.UserName != User.Identity.Name)
                                {
                                    <form asp-action="Buy" asp-route-id="@item.Id" method="post" class="d-grid">
                                        <button type="submit" class="btn btn-primary rounded-pill" onclick="return confirm('Voulez-vous vraiment acheter ce bien ?');">
                                            @if(item.TypeTransaction == "A Louer") { <span>Louer ce bien</span> } else { <span>Acheter ce bien</span> }
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-3">
                <i class="bi bi-shop display-1 text-muted"></i>
            </div>
            <h3>Aucun bien trouvé dans le Shop</h3>
            <p class="text-muted">Soyez le premier à ajouter une annonce !</p>
            <a asp-controller="BienImmobilier" asp-action="Create" class="btn btn-primary mt-2">
                Publier une annonce
            </a>
        </div>
    }
</div>

<style>
    .property-card-hover:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
</style>
