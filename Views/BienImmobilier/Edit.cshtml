@model RealEstateAdmin.Models.BienImmobilier

@{
    ViewData["Title"] = "Modifier le bien immobilier";
}

<h1>Modifier le bien immobilier</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label asp-for="Titre" class="form-label"></label>
                <input asp-for="Titre" class="form-control" />
                <span asp-validation-for="Titre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Prix" class="form-label"></label>
                <input asp-for="Prix" class="form-control" type="number" step="0.01" placeholder="Prix en DT" />
                <span asp-validation-for="Prix" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Adresse" class="form-label"></label>
                <input asp-for="Adresse" class="form-control" />
                <span asp-validation-for="Adresse" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Surface" class="form-label"></label>
                        <input asp-for="Surface" class="form-control" type="number" />
                        <span asp-validation-for="Surface" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="NombrePieces" class="form-label"></label>
                        <input asp-for="NombrePieces" class="form-control" type="number" />
                        <span asp-validation-for="NombrePieces" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label"></label>
                <input asp-for="ImageUrl" class="form-control" type="url" placeholder="https://exemple.com/image.jpg" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                <small class="form-text text-muted">Entrez l'URL de l'image du bien immobilier</small>
            </div>
            <div class="mb-3">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Annuler</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

