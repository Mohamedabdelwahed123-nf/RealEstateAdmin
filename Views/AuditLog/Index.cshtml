@model IEnumerable<RealEstateAdmin.Models.AuditLog>

@{
    ViewData["Title"] = "Historique des actions";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-gradient">
            <i class="bi bi-clock-history"></i> Historique des actions
        </h1>
        <span class="badge bg-primary fs-6">@Model.Count() action(s)</span>
    </div>

    @if (Model.Any())
    {
        <div class="card">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Action</th>
                            <th>Entité</th>
                            <th>ID</th>
                            <th>Détails</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td><span class="badge bg-info text-dark">@item.Action</span></td>
                                <td>@item.EntityType</td>
                                <td>@(item.EntityId?.ToString() ?? "-")</td>
                                <td>@item.Details</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox" style="font-size: 4rem; color: #cbd5e1;"></i>
                <h4 class="mt-3 text-muted">Aucune action</h4>
                <p class="text-muted">Les actions des admins apparaîtront ici.</p>
            </div>
        </div>
    }
</div>
