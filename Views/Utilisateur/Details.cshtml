@model RealEstateAdmin.Models.UserRoleViewModel

@{
    ViewData["Title"] = "Détails de l'utilisateur";
}

<div class="container">
    <h1 class="mb-4 text-gradient">
        <i class="bi bi-person"></i> Détails de l'utilisateur
    </h1>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nom</dt>
                <dd class="col-sm-9">@Model.UserName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Rôle</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-@(Model.CurrentRole == "Admin" ? "danger" : "primary")">
                        @Model.CurrentRole
                    </span>
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-controller="Account" asp-action="ManageRoles" class="btn btn-primary">
            <i class="bi bi-shield-check"></i> Gérer les rôles
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>
    </div>
</div>

