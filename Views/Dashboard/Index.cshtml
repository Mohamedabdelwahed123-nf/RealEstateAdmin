@{
    ViewData["Title"] = "Dashboard";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-gradient">
            <i class="bi bi-speedometer2"></i> Dashboard
        </h1>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="stat-card primary fade-in-up">
                <div class="mb-3">
                    <i class="bi bi-house-heart" style="font-size: 3rem; color: #667eea;"></i>
                </div>
                <h2 class="stat-number">@ViewBag.TotalBiens</h2>
                <p class="stat-label">Total des biens</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card success fade-in-up" style="animation-delay: 0.1s;">
                <div class="mb-3">
                    <i class="bi bi-people" style="font-size: 3rem; color: #4facfe;"></i>
                </div>
                <h2 class="stat-number">@ViewBag.TotalUtilisateurs</h2>
                <p class="stat-label">Total des utilisateurs</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card warning fade-in-up" style="animation-delay: 0.2s;">
                <div class="mb-3">
                    <i class="bi bi-envelope" style="font-size: 3rem; color: #f5576c;"></i>
                </div>
                <h2 class="stat-number">@ViewBag.TotalMessages</h2>
                <p class="stat-label">Total des messages</p>
            </div>
        </div>
    </div>

    <!-- Chart Card -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="bi bi-bar-chart"></i> Répartition des biens par prix
            </h5>
        </div>
        <div class="card-body">
            <canvas id="prixChart" width="400" height="200"></canvas>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning-charge"></i> Actions rapides
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="BienImmobilier" asp-action="Create" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Ajouter un bien immobilier
                        </a>
                        <a asp-controller="BienImmobilier" asp-action="Index" class="btn btn-outline-primary">
                            <i class="bi bi-list-ul"></i> Voir tous les biens
                        </a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="Utilisateur" asp-action="Index" class="btn btn-outline-primary">
                                <i class="bi bi-people"></i> Gérer les utilisateurs
                            </a>
                            <a asp-controller="Message" asp-action="Index" class="btn btn-outline-primary">
                                <i class="bi bi-envelope"></i> Voir les messages
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i> Informations
                    </h5>
                </div>
                <div class="card-body">
                    <p class="mb-3">
                        <strong>Bienvenue sur votre tableau de bord !</strong>
                    </p>
                    <p class="text-muted mb-0">
                        Gérez efficacement vos biens immobiliers, suivez vos statistiques et restez organisé avec notre plateforme moderne.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const ctx = document.getElementById('prixChart').getContext('2d');
        const biensParPrix = @Html.Raw(Json.Serialize(ViewBag.BiensParPrix));
        
        const labels = biensParPrix.map(item => item.categorie || item.Categorie);
        const data = biensParPrix.map(item => item.count || item.Count);
        
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Nombre de biens',
                    data: data,
                    backgroundColor: [
                        'rgba(102, 126, 234, 0.8)',
                        'rgba(79, 172, 254, 0.8)',
                        'rgba(245, 87, 108, 0.8)',
                        'rgba(255, 159, 64, 0.8)',
                        'rgba(153, 102, 255, 0.8)'
                    ],
                    borderColor: [
                        'rgba(102, 126, 234, 1)',
                        'rgba(79, 172, 254, 1)',
                        'rgba(245, 87, 108, 1)',
                        'rgba(255, 159, 64, 1)',
                        'rgba(153, 102, 255, 1)'
                    ],
                    borderWidth: 2,
                    borderRadius: 8
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        },
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)'
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });
    </script>
}
