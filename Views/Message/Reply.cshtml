@model RealEstateAdmin.Models.Message

@{
    ViewData["Title"] = "Répondre au message";
    var message = ViewBag.Message as RealEstateAdmin.Models.Message;
}

<h1>Répondre au message</h1>

<div class="card mb-4">
    <div class="card-header">
        <h5>Message original</h5>
    </div>
    <div class="card-body">
        <p><strong>De :</strong> @message?.NomUtilisateur (@message?.Email)</p>
        <p><strong>Sujet :</strong> @message?.Sujet</p>
        <p><strong>Date :</strong> @message?.DateCreation</p>
        <p><strong>Contenu :</strong></p>
        <p>@message?.Contenu</p>
    </div>
</div>

<form asp-action="Reply" method="post">
    <input type="hidden" name="messageId" value="@message?.Id" />
    <div class="mb-3">
        <label for="reponse" class="form-label">Votre réponse</label>
        <textarea name="reponse" class="form-control" rows="6" required></textarea>
    </div>
    <div class="mb-3">
        <input type="submit" value="Envoyer la réponse" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-secondary">Annuler</a>
    </div>
</form>

