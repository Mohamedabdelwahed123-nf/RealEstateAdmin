@model RealEstateAdmin.Models.Payment
@{
    ViewData["Title"] = "Nouveau paiement";
    var sale = ViewBag.Sale as RealEstateAdmin.Models.Sale;
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-gradient">
            <i class="bi bi-plus-circle"></i> Nouveau paiement
        </h1>
        <a asp-action="Index" asp-route-saleId="@Model.SaleId" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour aux paiements
        </a>
    </div>

    @if (sale != null)
    {
        <div class="card mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="fw-semibold">@sale.Bien?.Titre</div>
                        <small class="text-muted">Vente ID: @sale.Id</small>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <div class="fw-semibold">@sale.Prix.ToString("N2") DT</div>
                        <small class="text-muted">Statut paiement: @sale.PaymentStatus</small>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="SaleId" />

                <div class="row g-3">
                    <div class="col-md-4">
                        <label asp-for="Amount" class="form-label fw-semibold">Montant</label>
                        <div class="input-group">
                            <input asp-for="Amount" class="form-control" type="number" step="0.01" />
                            <span class="input-group-text">DT</span>
                        </div>
                        <span asp-validation-for="Amount" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Method" class="form-label fw-semibold">Méthode</label>
                        <select asp-for="Method" class="form-select">
                            <option>Espèces</option>
                            <option>Virement</option>
                            <option>Chèque</option>
                            <option>Carte</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Status" class="form-label fw-semibold">Statut</label>
                        <select asp-for="Status" class="form-select">
                            <option>En attente</option>
                            <option>Payé</option>
                            <option>Annulé</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Reference" class="form-label fw-semibold">Référence</label>
                        <input asp-for="Reference" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="PaidAt" class="form-label fw-semibold">Date paiement</label>
                        <input asp-for="PaidAt" class="form-control" type="datetime-local" />
                    </div>
                    <div class="col-12">
                        <label asp-for="Notes" class="form-label fw-semibold">Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Enregistrer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
