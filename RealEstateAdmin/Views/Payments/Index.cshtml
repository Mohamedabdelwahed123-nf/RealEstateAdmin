@model IEnumerable<RealEstateAdmin.Models.Payment>
@{
    ViewData["Title"] = "Paiements";
    var sale = ViewBag.Sale as RealEstateAdmin.Models.Sale;
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-gradient">
            <i class="bi bi-credit-card"></i> Paiements
        </h1>
        @if (sale != null)
        {
            <a asp-controller="Sales" asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Retour aux ventes
            </a>
        }
    </div>

    @if (sale != null)
    {
        <div class="card mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="fw-semibold">@sale.Bien?.Titre</div>
                        <small class="text-muted">Bien ID: @sale.BienId</small>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <div class="fw-semibold">@sale.Prix.ToString("N2") DT</div>
                        <small class="text-muted">Statut paiement: @sale.PaymentStatus</small>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="mb-3">
        @if (sale != null)
        {
            <a asp-action="Create" asp-route-saleId="@sale.Id" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nouveau paiement
            </a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox" style="font-size: 4rem; color: #cbd5e1;"></i>
                <h4 class="mt-3 text-muted">Aucun paiement</h4>
                <p class="text-muted">Ajoute un paiement pour cette vente.</p>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Montant</th>
                            <th>Méthode</th>
                            <th>Statut</th>
                            <th>Référence</th>
                            <th>Paiement le</th>
                            <th>Notes</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td>@p.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@p.Amount.ToString("N2") DT</td>
                                <td>@p.Method</td>
                                <td>
                                    <span class="badge bg-@(p.Status == "Payé" ? "success" : p.Status == "Annulé" ? "danger" : "secondary")">
                                        @p.Status
                                    </span>
                                </td>
                                <td>@(p.Reference ?? "-")</td>
                                <td>@(p.PaidAt?.ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
                                <td class="small text-muted">@p.Notes</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
