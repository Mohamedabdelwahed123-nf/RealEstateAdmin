@model IEnumerable<RealEstateAdmin.Models.AuditLog>

@{
    ViewData["Title"] = "Historique des actions";
    var usersById = ViewBag.UsersById as Dictionary<string, RealEstateAdmin.Models.ApplicationUser> 
        ?? new Dictionary<string, RealEstateAdmin.Models.ApplicationUser>();
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-gradient">
            <i class="bi bi-clock-history"></i> Historique des actions
        </h1>
        <span class="badge bg-primary fs-6">@Model.Count() action(s)</span>
    </div>

    @if (Model.Any())
    {
        <div class="card">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Utilisateur</th>
                            <th>Action</th>
                            <th>Entité</th>
                            <th>ID</th>
                            <th>Détails</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var actionClass = item.Action switch
                            {
                                "Create" => "success",
                                "Edit" => "warning",
                                "Delete" => "danger",
                                "Publish" => "primary",
                                "Status" => "secondary",
                                "Buy" => "info",
                                _ => "light"
                            };
                            var details = item.Details ?? "";
                            RealEstateAdmin.Models.ApplicationUser? user = null;
                            if (!string.IsNullOrWhiteSpace(item.UserId))
                            {
                                usersById.TryGetValue(item.UserId, out user);
                            }
                            <tr>
                                <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <div class="fw-semibold">@(user?.Nom ?? user?.UserName ?? "Inconnu")</div>
                                    <small class="text-muted">@(user?.Email ?? item.UserId ?? "-")</small>
                                </td>
                                <td>
                                    <span class="badge bg-@actionClass @(actionClass == "light" ? "text-dark" : "")">
                                        @item.Action
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark">@item.EntityType</span>
                                </td>
                                <td>@(item.EntityId?.ToString() ?? "-")</td>
                                <td class="small text-muted">
                                    @Html.Raw(System.Net.WebUtility.HtmlEncode(details).Replace(" | ", "<br/>"))
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox" style="font-size: 4rem; color: #cbd5e1;"></i>
                <h4 class="mt-3 text-muted">Aucune action</h4>
                <p class="text-muted">Les actions des admins apparaîtront ici.</p>
            </div>
        </div>
    }
</div>
