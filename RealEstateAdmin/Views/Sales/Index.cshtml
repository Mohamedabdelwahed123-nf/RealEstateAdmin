@model IEnumerable<RealEstateAdmin.Models.SaleViewModel>

@{
    ViewData["Title"] = "Ventes";
    var totalVentes = Model.Count();
    var totalMontant = Model.Sum(v => v.Prix ?? 0);
    var buyers = ViewBag.Buyers as List<RealEstateAdmin.Models.ApplicationUser> ?? new List<RealEstateAdmin.Models.ApplicationUser>();
    var sellers = ViewBag.Sellers as List<RealEstateAdmin.Models.ApplicationUser> ?? new List<RealEstateAdmin.Models.ApplicationUser>();
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-gradient">
            <i class="bi bi-receipt"></i> Ventes
        </h1>
        <div class="text-end">
            <div class="small text-muted">Total ventes</div>
            <div class="fw-bold">@totalVentes</div>
        </div>
    </div>

    <div class="alert alert-light border d-flex justify-content-between align-items-center mb-4">
        <div>
            <strong>Montant total:</strong> @totalMontant.ToString("N2") DT
        </div>
        <small class="text-muted">Basé sur les ventes enregistrées</small>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label fw-semibold">Date début</label>
                    <input type="date" name="dateFrom" class="form-control" value="@ViewBag.DateFrom" />
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-semibold">Date fin</label>
                    <input type="date" name="dateTo" class="form-control" value="@ViewBag.DateTo" />
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-semibold">Acheteur</label>
                    <select name="buyerId" class="form-select">
                        <option value="">Tous</option>
                        @foreach (var user in buyers)
                        {
                            var selected = ViewBag.BuyerId == user.Id ? "selected" : "";
                            <option value="@user.Id" selected="@selected">
                                @(user.Nom ?? user.UserName ?? user.Email ?? user.Id)
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-semibold">Vendeur</label>
                    <select name="sellerId" class="form-select">
                        <option value="">Tous</option>
                        @foreach (var user in sellers)
                        {
                            var selected = ViewBag.SellerId == user.Id ? "selected" : "";
                            <option value="@user.Id" selected="@selected">
                                @(user.Nom ?? user.UserName ?? user.Email ?? user.Id)
                            </option>
                        }
                    </select>
                </div>
                <div class="col-12 text-end">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">Réinitialiser</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-funnel"></i> Filtrer
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-receipt" style="font-size: 4rem; color: #cbd5e1;"></i>
                <h4 class="mt-3 text-muted">Aucune vente</h4>
                <p class="text-muted">Les ventes apparaîtront ici dès qu'elles seront enregistrées.</p>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-list-check"></i> Historique des ventes
                </h5>
            </div>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Bien</th>
                            <th>Adresse</th>
                            <th class="text-end">Prix</th>
                            <th>Statut</th>
                            <th>Paiement</th>
                            <th>Statut paiement</th>
                            <th>Payé le</th>
                            <th>Acheteur</th>
                            <th>Vendeur</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var vente in Model)
                        {
                            <tr>
                                <td>@vente.DateVente.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    @if (vente.BienId.HasValue)
                                    {
                                        <a asp-controller="BienImmobilier" asp-action="Details" asp-route-id="@vente.BienId" class="text-decoration-none">
                                            @vente.BienTitre
                                        </a>
                                    }
                                    else
                                    {
                                        @vente.BienTitre
                                    }
                                </td>
                                <td>@(vente.Adresse ?? "-")</td>
                                <td class="text-end">@((vente.Prix ?? 0).ToString("N2")) DT</td>
                                <td>
                                    <span class="badge bg-@(vente.Status == "Validée" ? "success" : "secondary")">
                                        @(vente.Status ?? "-")
                                    </span>
                                </td>
                                <td>@(vente.PaymentMethod ?? "-")</td>
                                <td>
                                    <span class="badge bg-@(vente.PaymentStatus == "Payé" ? "success" : vente.PaymentStatus == "Annulé" ? "danger" : "secondary")">
                                        @(vente.PaymentStatus ?? "-")
                                    </span>
                                </td>
                                <td>@(vente.PaidAt?.ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
                                <td>
                                    <div class="fw-semibold">@(vente.AcheteurNom ?? "Inconnu")</div>
                                    <small class="text-muted">@(vente.AcheteurEmail ?? "-")</small>
                                </td>
                                <td>
                                    <div class="fw-semibold">@(vente.VendeurNom ?? "Inconnu")</div>
                                    <small class="text-muted">@(vente.VendeurEmail ?? "-")</small>
                                </td>
                                <td>
                                    <a asp-controller="Payments" asp-action="Index" asp-route-saleId="@vente.SaleId" class="btn btn-sm btn-outline-primary">
                                        Paiements
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
