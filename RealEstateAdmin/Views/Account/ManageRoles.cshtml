@model IEnumerable<RealEstateAdmin.Models.UserRoleViewModel>

@{
    ViewData["Title"] = "Gestion des admins";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-gradient">
            <i class="bi bi-shield-check"></i> Gestion des admins
        </h1>
        <span class="badge bg-primary fs-6">@Model.Count() utilisateur(s)</span>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-people"></i> Liste des utilisateurs et leurs rôles
                </h5>
            </div>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>
                                <i class="bi bi-person"></i> Utilisateur
                            </th>
                            <th>
                                <i class="bi bi-envelope-at"></i> Email
                            </th>
                            <th>
                                <i class="bi bi-shield-check"></i> Rôle actuel
                            </th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@user.UserName</strong>
                                </td>
                                <td>
                                    <a href="mailto:@user.Email" class="text-decoration-none">
                                        <i class="bi bi-envelope"></i> @user.Email
                                    </a>
                                </td>
                                <td>
                                    @{
                                        var roleClass = user.CurrentRole == "SuperAdmin" ? "dark"
                                            : user.CurrentRole == "Admin" ? "danger"
                                            : "primary";
                                        var roleIcon = user.CurrentRole == "SuperAdmin" ? "shield-lock-fill"
                                            : user.CurrentRole == "Admin" ? "shield-fill"
                                            : "person";
                                    }
                                    <span class="badge bg-@roleClass fs-6">
                                        <i class="bi bi-@roleIcon"></i> @user.CurrentRole
                                    </span>
                                </td>
                                <td class="text-end">
                                    <form asp-action="AssignRole" method="post" class="d-inline-flex align-items-center gap-2">
                                        <input type="hidden" name="userId" value="@user.UserId" />
                                        <input type="hidden" name="returnAction" value="ManageRoles" />
                                        <select name="roleName" class="form-select form-select-sm" style="width: auto;">
                                            <option value="Utilisateur" selected="@(user.CurrentRole == "Utilisateur")">Utilisateur</option>
                                            <option value="Admin" selected="@(user.CurrentRole == "Admin")">Admin</option>
                                            <option value="SuperAdmin" selected="@(user.CurrentRole == "SuperAdmin")">SuperAdmin</option>
                                        </select>
                                        <button type="submit" class="btn btn-sm btn-primary">
                                            <i class="bi bi-check-circle"></i> Assigner
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="bi bi-info-circle"></i> Informations sur les rôles
                </h5>
                <div class="row">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3">
                            <span class="badge bg-danger me-3 fs-6">Admin</span>
                            <span class="text-muted">Gère les biens, messages et historiques</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3">
                            <span class="badge bg-primary me-3 fs-6">Utilisateur</span>
                            <span class="text-muted">Accès limité à ses propres biens immobiliers</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex align-items-center mb-3">
                            <span class="badge bg-dark me-3 fs-6">SuperAdmin</span>
                            <span class="text-muted">Seul à pouvoir gérer les rôles</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-people" style="font-size: 4rem; color: #cbd5e1;"></i>
                <h4 class="mt-3 text-muted">Aucun utilisateur</h4>
                <p class="text-muted">Aucun utilisateur n'est enregistré dans le système.</p>
            </div>
        </div>
    }
</div>

