@model IEnumerable<RealEstateAdmin.Models.BienImmobilier>

@{
    Layout = null;
    ViewData["Title"] = "Export Biens";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>Biens</title>
    <style>
        body { font-family: Arial, sans-serif; font-size: 12px; color: #111; }
        h1 { font-size: 18px; margin-bottom: 12px; }
        table { width: 100%; border-collapse: collapse; }
        th, td { border: 1px solid #ccc; padding: 6px; text-align: left; }
        th { background: #f0f0f0; }
    </style>
</head>
<body>
    <h1>Biens immobiliers</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Prix</th>
                <th>Adresse</th>
                <th>Surface</th>
                <th>Statut</th>
                <th>Publication</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model)
            {
                <tr>
                    <td>@b.Id</td>
                    <td>@b.Titre</td>
                    <td>@b.Prix.ToString("N0")</td>
                    <td>@b.Adresse</td>
                    <td>@b.Surface</td>
                    <td>@b.TypeTransaction</td>
                    <td>@b.PublicationStatus</td>
                </tr>
            }
        </tbody>
    </table>
    <script>
        window.onload = () => window.print();
    </script>
</body>
</html>
